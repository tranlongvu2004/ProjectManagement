@model List<PorjectManagement.Models.ViewModels.ProjectListVM>
@{
    ViewData["Title"] = "Dự án của tôi";
    var roleId = Context.Session.GetInt32("RoleId") ?? 0;
}

<div class="container-fluid p-0">
    <div class="row g-0">
        <!-- SIDEBAR -->
        <partial name="_SidebarPartial" model="Model" />

        <!-- MAIN CONTENT -->
        <div class="col-md-10 offset-md-2">
            <div class="p-4">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="fw-bold">Dự án của tôi</h2>
                    @if (roleId == 1)
                    {
                        <a asp-controller="ProjectManagement" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Tạo dự án mới
                        </a>
                    }                  
                </div>

                <!-- Projects Table -->
                @if (Model != null && Model.Any())
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="px-4 py-3">#</th>
                                            <th class="py-3">Tên dự án</th>
                                            <th class="py-3">Leader</th>
                                            <th class="py-3">Thành viên</th>
                                            <th class="py-3">Deadline</th>
                                            <th class="py-3">Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int rowIndex = 1;
                                        }
                                        @foreach (var p in Model)
                                        {
                                            <tr>
                                                <td class="px-4 py-3 text-muted fw-semibold">@(rowIndex++)</td>
                                                <td class="py-3">
                                                    <a asp-controller="Workspace" 
                                                       asp-action="Details" 
                                                       asp-route-id="@p.ProjectId"
                                                       class="text-decoration-none fw-semibold text-primary">
                                                        @p.ProjectName
                                                    </a>
                                                </td>
                                                <td class="py-3">@p.LeaderName</td>
                                                <td class="py-3">
                                                    <span class="badge bg-light text-dark">
                                                        <i class="bi bi-people-fill"></i> @p.MemberCount
                                                    </span>
                                                </td>
                                                <td class="py-3">@p.Deadline.ToString("dd/MM/yyyy")</td>
                                                <td class="py-3">
                                                    @switch (p.Status)
                                                    {
                                                        case ProjectStatus.InProgress:
                                                            <span class="badge bg-primary">Đang tiến hành</span>
                                                            break;
                                                        case ProjectStatus.Completed:
                                                            <span class="badge bg-success">Hoàn thành</span>
                                                            break;
                                                        case ProjectStatus.Dropped:
                                                            <span class="badge bg-danger">Hủy bỏ</span>
                                                            break;
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-folder-x text-muted" style="font-size: 4rem;"></i>
                            <h5 class="mt-3 text-muted">Chưa có dự án nào</h5>
                            <p class="text-muted">Tạo dự án đầu tiên của bạn ngay bây giờ!</p>
                            <a asp-controller="ProjectManagement" asp-action="Create" class="btn btn-primary mt-2">
                                <i class="bi bi-plus-circle"></i> Tạo dự án mới
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .nav-link {
        border-radius: 8px;
        transition: all 0.2s;
    }

    .nav-link:hover {
        background-color: #e9ecef;
    }

    .card {
        border-radius: 12px;
    }

    .table thead th {
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody tr {
        transition: all 0.2s;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .badge {
        font-weight: 500;
        padding: 0.4em 0.8em;
    }
</style>
