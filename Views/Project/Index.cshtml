@using PorjectManagement.ViewModels
@model ProjectFilterVM

@{
    ViewData["Title"] = "My Projects";
    var roleId = Context.Session.GetInt32("RoleId");
}

<!-- MAIN CONTENT -->
<div class="p-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Projects</h2>
        
        @* (RoleId == 1) *@
        @if (roleId == 1)
        {
            <a asp-controller="ProjectManagement" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New project
            </a>
        }
    </div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
            <label class="form-label fw-semibold text-muted">Search by project's name</label>
        <input name="keyword"
               value="@Model.Keyword"
               class="form-control"
               placeholder="Enter project's name" />
    </div>

    <div class="col-md-3">
        <label class="form-label fw-semibold text-muted">Filter by status</label>
        <select name="status" class="form-select">
            <option value="">All Status</option>
            @foreach (ProjectStatus s in Enum.GetValues(typeof(ProjectStatus)))
            {
                    string text = s switch
                    {
                        ProjectStatus.InProgress => "In Progress",
                        ProjectStatus.Completed => "Completed",
                        ProjectStatus.Dropped => "Dropped",
                        _ => s.ToString()
                    };

                    <option value="@s" selected="@(Model.Status == s)">
                        @text
                    </option>
            }
        </select>
    </div>
    <div class="col-md-5 row">
            <label class="col-md-12 form-label fw-semibold text-muted">Sort by</label>
            <div class="col-md-6">
                <select name="sortBy" class="form-select">
                    <option value="name" selected="@(Model.SortBy == "name")">Name</option>
                    <option value="deadline" selected="@(Model.SortBy == "deadline")">Deadline</option>
                </select>
            </div>

            <div class="col-md-6">
                <select name="sortDir" class="form-select">
                    <option value="asc" selected="@(Model.SortDir == "asc")">Ascending</option>
                    <option value="desc" selected="@(Model.SortDir == "desc")">Descending</option>
                </select>
            </div>
    </div>

        <div class="col-md-12 d-flex justify-content-end">
            <button class="btn btn-primary ms-auto">
            <i class="bi"></i> Apply
        </button>
    </div>
</form>


    <!-- Projects Table -->
    @if (Model != null)
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="px-4 py-3">#</th>
                                <th class="py-3">Name</th>
                                <th class="py-3">Leader</th>
                                <th class="py-3">Members</th>
                                <th class="py-3">Deadline</th>
                                <th class="py-3">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Projects)
                            {
                                <tr>
                                    <td class="px-4 py-3 text-muted fw-semibold">@p.Index</td>
                                    <td class="py-3">
                                        <a asp-controller="Workspace" 
                                           asp-action="Details" 
                                           asp-route-id="@p.ProjectId"
                                           class="text-decoration-none fw-semibold text-primary">
                                            @p.ProjectName
                                        </a>
                                    </td>
                                    <td class="py-3">@p.LeaderName</td>
                                    <td class="py-3">
                                        <span class="badge bg-light text-dark">
                                            <i class="bi bi-people-fill"></i> @p.MemberCount
                                        </span>
                                    </td>
                                    <td class="py-3">@p.Deadline.ToString("dd/MM/yyyy")</td>
                                    <td class="py-3">
                                        @switch (p.Status)
                                        {
                                            case ProjectStatus.InProgress:
                                                <span class="badge bg-primary">In Progress</span>
                                                break;
                                            case ProjectStatus.Completed:
                                                <span class="badge bg-success">Completed</span>
                                                break;
                                            case ProjectStatus.Dropped:
                                                <span class="badge bg-danger">Dropped</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-folder-x text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">No project found</h5>
                <p class="text-muted">
                    @if (roleId == 1)
                    {
                        @:Create your first project now!
                    }
                    else
                    {
                        @:You're not assigned to any project yet
                    }
                </p>
                
                @* MENTOR *@
                @if (roleId == 1)
                {
                    <a asp-controller="ProjectManagement" asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> New project
                    </a>
                }
            </div>
        </div>
    }
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 12px;
    }

    .table thead th {
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #dee2e6;
    }

    .table tbody tr {
        transition: all 0.2s;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .badge {
        font-weight: 500;
        padding: 0.4em 0.8em;
    }
</style>

@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@(Model.Page - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@(Model.Page + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

