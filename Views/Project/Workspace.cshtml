@model PorjectManagement.ViewModels.ProjectWorkspaceViewModel

@{
    ViewData["Title"] = Model.Project.ProjectName;
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-folder-fill text-primary"></i> @Model.Project.ProjectName
            </h2>
            <p class="text-muted mb-0">
                <i class="bi bi-calendar3"></i> Deadline: @Model.Project.Deadline.ToString("dd/MM/yyyy") 
                <span class="ms-3">
                    @switch (Model.Project.Status)
                    {
                        case "InProgress":
                            <span class="badge bg-primary">Đang tiến hành</span>
                            break;
                        case "Completed":
                            <span class="badge bg-success">Hoàn thành</span>
                            break;
                        case "Dropped":
                            <span class="badge bg-danger">Đã hủy</span>
                            break;
                        default:
                            <span class="badge bg-secondary">@Model.Project.Status</span>
                            break;
                    }
                </span>
            </p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>

    <!-- Description -->
    @if (!string.IsNullOrEmpty(Model.Project.Description))
    {
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <h6 class="fw-bold mb-2">
                    <i class="bi bi-card-text text-info"></i> Mô tả
                </h6>
                <p class="text-muted mb-0">@Model.Project.Description</p>
            </div>
        </div>
    }

    <!-- Overall Progress -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h6 class="fw-bold mb-3">
                <i class="bi bi-graph-up text-success"></i> Tiến Độ Tổng Thể
            </h6>
            <div class="progress" style="height: 30px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" 
                     role="progressbar" 
                     style="width: @Model.OverallProgress%;"
                     aria-valuenow="@Model.OverallProgress" 
                     aria-valuemin="0" 
                     aria-valuemax="100">
                    @Model.OverallProgress%
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Members Section (Left Column) -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0 pt-4">
                    <h5 class="fw-bold mb-0">
                        <i class="bi bi-people-fill text-success"></i> 
                        Thành Viên (@Model.Members.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Members != null && Model.Members.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var member in Model.Members)
                            {
                                <div class="list-group-item border-0 px-0 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-3" style="width: 48px; height: 48px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center;">
                                            <span class="text-white fw-bold fs-5">
                                                @member.FullName.Substring(0, 1).ToUpper()
                                            </span>
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center">
                                                <span class="fw-semibold">@member.FullName</span>
                                                @if (member.IsLeader)
                                                {
                                                    <span class="badge bg-warning text-dark ms-2">
                                                        <i class="bi bi-star-fill"></i> Leader
                                                    </span>
                                                }
                                            </div>
                                            <small class="text-muted d-block">@member.Email</small>
                                            <small class="badge bg-light text-dark">@member.RoleName</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">Chưa có thành viên nào</p>
                    }
                </div>
            </div>
        </div>

        <!-- Tasks Section (Right Column) -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white border-0 pt-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0">
                        <i class="bi bi-list-task text-primary"></i> 
                        Tasks (@Model.Tasks.Count)
                    </h5>
                    <a asp-controller="Task" asp-action="Create" asp-route-projectId="@Model.Project.ProjectId" 
                       class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle"></i> Tạo Task
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Tasks != null && Model.Tasks.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Task</th>
                                        <th>Priority</th>
                                        <th>Status</th>
                                        <th>Tiến độ</th>
                                        <th>Deadline</th>
                                        <th>Assignees</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in Model.Tasks)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">@task.Title</div>
                                                @if (!string.IsNullOrEmpty(task.Description))
                                                {
                                                    <small class="text-muted">@task.Description</small>
                                                }
                                            </td>
                                            <td>
                                                @switch (task.Priority)
                                                {
                                                    case "Low":
                                                        <span class="badge bg-secondary">Low</span>
                                                        break;
                                                    case "Medium":
                                                        <span class="badge bg-info">Medium</span>
                                                        break;
                                                    case "High":
                                                        <span class="badge bg-warning text-dark">High</span>
                                                        break;
                                                    case "Necessary":
                                                        <span class="badge bg-danger">Necessary</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-light text-dark">@task.Priority</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (task.Status)
                                                {
                                                    case "ToDo":
                                                        <span class="badge bg-secondary">To Do</span>
                                                        break;
                                                    case "Doing":
                                                        <span class="badge bg-primary">Doing</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge bg-success">Completed</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-light text-dark">@task.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="progress" style="height: 20px; min-width: 80px;">
                                                    <div class="progress-bar" 
                                                         role="progressbar" 
                                                         style="width: @(task.ProgressPercent ?? 0)%"
                                                         aria-valuenow="@(task.ProgressPercent ?? 0)" 
                                                         aria-valuemin="0" 
                                                         aria-valuemax="100">
                                                        @(task.ProgressPercent ?? 0)%
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (task.Deadline.HasValue)
                                                {
                                                    <small>@task.Deadline.Value.ToString("dd/MM/yyyy")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Chưa có</small>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(task.Assignees))
                                                {
                                                    <small>@task.Assignees</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Chưa assign</small>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <p class="text-muted mt-3">Chưa có task nào. Tạo task đầu tiên!</p>
                            <a asp-controller="Task" asp-action="Create" asp-route-projectId="@Model.Project.ProjectId" 
                               class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Tạo Task Mới
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Metadata Footer -->
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-body bg-light">
            <div class="row text-center">
                <div class="col-md-4">
                    <i class="bi bi-calendar-plus text-primary fs-4"></i>
                    <div class="mt-2">
                        <small class="text-muted">Ngày tạo</small>
                        <div class="fw-semibold">
                            @(Model.Project.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <i class="bi bi-clock-history text-warning fs-4"></i>
                    <div class="mt-2">
                        <small class="text-muted">Cập nhật lần cuối</small>
                        <div class="fw-semibold">
                            @(Model.Project.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <i class="bi bi-person-check text-success fs-4"></i>
                    <div class="mt-2">
                        <small class="text-muted">Tổng thành viên</small>
                        <div class="fw-semibold">@Model.Members.Count người</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .avatar-circle {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .table th {
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .progress {
        border-radius: 10px;
    }

    .badge {
        font-weight: 500;
        padding: 0.4em 0.8em;
    }
</style>