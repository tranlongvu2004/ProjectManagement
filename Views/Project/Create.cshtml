@model PorjectManagement.ViewModels.ProjectCreateViewModel

@{
    ViewData["Title"] = "Tạo Project Mới";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Tạo Project Mới</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="ProjectName" class="form-label fw-bold">Tên dự án <span class="text-danger">*</span></label>
                            <input asp-for="ProjectName" class="form-control" placeholder="Nhập tên dự án" />
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả dự án (tùy chọn)"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Deadline" class="form-label fw-bold">Deadline <span class="text-danger">*</span></label>
                            <input asp-for="Deadline" type="date" class="form-control" />
                            <span asp-validation-for="Deadline" class="text-danger"></span>
                        </div>

                        <hr />

                        <h5 class="fw-bold mb-3">Chọn thành viên</h5>

                        @if (Model.AvailableUsers != null && Model.AvailableUsers.Any())
                        {
                            <div class="mb-3">
                                <div class="row">
                                    @foreach (var user in Model.AvailableUsers)
                                    {
                                        <div class="col-md-6 mb-2">
                                            <div class="form-check">
                                                <input type="checkbox" 
                                                       name="SelectedUserIds" 
                                                       value="@user.UserId" 
                                                       class="form-check-input" 
                                                       id="user_@user.UserId" />
                                                <label class="form-check-label" for="user_@user.UserId">
                                                    <strong>@user.FullName</strong><br />
                                                    <small class="text-muted">@user.Email (@user.RoleName)</small>
                                                </label>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LeaderId" class="form-label fw-bold">Chọn Leader (tùy chọn)</label>
                                <select asp-for="LeaderId" class="form-select">
                                    <option value="">-- Không chọn Leader --</option>
                                    @foreach (var user in Model.AvailableUsers)
                                    {
                                        <option value="@user.UserId">@user.FullName (@user.RoleName)</option>
                                    }
                                </select>
                                <small class="form-text text-muted">Leader phải là thành viên được chọn ở trên</small>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning">Không có user nào khả dụng.</div>
                        }

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                            <button type="submit" class="btn btn-primary">Tạo Project</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}