<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PorjectManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PorjectManagement.styles.css" asp-append-version="true" />
    <style>
        /* ============================
           GLOBAL
        ============================ */
        body {
            background: #f5f7fb;
            font-family: 'Segoe UI', sans-serif;
            color: #333;
        }

        a {
            text-decoration: none;
        }

        /* ============================
           NAVBAR
        ============================ */
        .navbar {
            height: 60px;
            background: #ffffff !important;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-size: 20px;
            font-weight: 700;
            color: #2b65ff !important;
        }

        /* SEARCH BAR */
        .navbar input[type="search"] {
            border: 1px solid #d8d8d8;
            transition: 0.2s;
        }

            .navbar input[type="search"]:focus {
                box-shadow: 0 0 5px rgba(43, 101, 255, 0.4);
                border-color: #2b65ff;
            }

        /* LOGOUT */
        .navbar .logout-link {
            margin-right: 15px;
            font-weight: 500;
            color: #444;
        }

            .navbar .logout-link:hover {
                color: #2b65ff;
            }

        /* Icons */
        .navbar img {
            transition: 0.2s;
        }

            .navbar img:hover {
                transform: scale(1.15);
            }

        /* ============================
           SIDEBAR
        ============================ */
        .sidebar {
            width: 240px;
            background: white;
            height: calc(100vh - 60px);
            position: fixed;
            top: 60px;
            left: 0;
            padding: 20px;
            border-right: 1px solid #e6e6e6;
            overflow-y: auto;
        }

            .sidebar h5 {
                font-weight: 700;
                margin-bottom: 15px;
                color: #222;
            }

            .sidebar h6 {
                color: #555;
                font-weight: 600;
            }

        /* MENU ITEM */
        .menu-item {
            padding: 10px 12px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 15px;
            margin-bottom: 6px;
            transition: 0.2s;
            color: #333;
        }

            .menu-item a {
                color: inherit;
            }

            .menu-item:hover,
            .menu-item.active {
                background: #eef3ff;
                color: #2b65ff;
                font-weight: 600;
            }

        /* ============================
           MAIN CONTENT
        ============================ */
        .main-content {
            margin-left: 260px;
            padding: 30px;
        }

        /* ============================
           TABLES
        ============================ */
        table {
            border-radius: 8px;
            overflow: hidden;
        }

        .table thead {
            background: #f1f4ff !important;
        }

        .table tbody tr:hover {
            background: #f8faff;
        }

        /* ============================
           DASHBOARD BUTTON
        ============================ */
        .dashboard-btn {
            padding: 8px 16px;
            background: linear-gradient(135deg, #4c6ef5, #3b5bdb);
            color: white !important;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            border: none;
            transition: 0.25s ease;
        }

            .dashboard-btn:hover {
                background: linear-gradient(135deg, #364fc7, #2f44ad);
                color: #e9ecef !important;
                transform: translateY(-2px);
                box-shadow: 0px 4px 10px rgba(0,0,0,0.2);
            }

        /* ============================
           BUTTONS FOR TOOLBAR
        ============================ */
        .btn-tool {
            background: white;
            border: 1px solid #d8d8d8;
            padding: 6px 12px;
            border-radius: 6px;
            transition: 0.2s;
        }

            .btn-tool:hover {
                background: #eef3ff;
                color: #2b65ff;
                border-color: #c3d4ff;
            }

        /* ============================
           SCROLLBAR CUSTOM
        ============================ */
        ::-webkit-scrollbar {
            width: 7px;
        }

        ::-webkit-scrollbar-track {
            background: #f0f2f7;
        }

        ::-webkit-scrollbar-thumb {
            background: #b9c4e2;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #8ea2d8;
            }

    </style>
</head>
<body>   
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    ProjectManagement
                </a>

                <!-- Mobile button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content -->
                <div class="collapse navbar-collapse justify-content-between" id="mainNavbar">
                    <!-- SEARCH BAR (CENTER) -->
                    <form class="d-flex mx-auto" style="width: 350px;">
                        <input class="form-control rounded-pill px-3" type="search" placeholder="Tìm kiếm dự án, thành viên..."
                               aria-label="Search" />
                    </form>

                    <!-- RIGHT ICONS -->
                    <div class="d-flex align-items-center">
                        <a href="/User/LogOut"> Đăng xuất </a>
                        <!-- Icon 1 -->
                        <img src="~/images/icon1.png"
                             style="width: 32px; height: 32px; margin-right: 12px; cursor: pointer;" />

                        <!-- Icon 2 -->
                        <img src="~/images/icon2.png"
                             style="width: 32px; height: 32px; cursor: pointer;" />

                    </div>

                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div class="sidebar">
        <h5>MENU</h5>

        <div class="menu-item active">
            <a asp-controller="Home" asp-action="Index" style="text-decoration:none;color:inherit;">Tổng quan</a>
        </div>

        <div class="menu-item">Dự án của tôi</div>
        <div class="menu-item">Nhóm của tôi</div>
        <hr />

        <h6 class="mt-3">WORKSPACE</h6>
        <div class="menu-item">Main workspace</div>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PorjectManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
