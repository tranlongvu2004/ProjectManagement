<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PorjectManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PorjectManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <style>
        body {
            background: #f5f7fb;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            background: white;
            height: 100vh;
            position: fixed;
            border-right: 1px solid #e6e6e6;
            padding: 20px;
            top: 60px;
            left: 0;
            overflow-y: auto;
        }

            .sidebar h5 {
                font-weight: 700;
                margin-bottom: 20px;
            }

            .sidebar .menu-item {
                padding: 10px 8px;
                border-radius: 8px;
                cursor: pointer;
                font-size: 15px;
                margin-bottom: 6px;
                text-decoration: none;
                color: inherit;
                display: block;
            }

                .sidebar .menu-item:hover,
                .sidebar .menu-item.active {
                    background: #eef3ff;
                    color: #2b65ff;
                }

        /* Content */
        .main-content {
            margin-left: 260px;
            padding: 30px;
        }

        footer {
            display: none;
        }
    </style>
</head>
<body>
    @{
        var roleId = Context.Session.GetInt32("RoleId");
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    ProjectManagement
                </a>

                <!-- Mobile button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content -->
                <div class="collapse navbar-collapse justify-content-between" id="mainNavbar">
                    <!-- SEARCH BAR (CENTER) -->
                    <form class="d-flex mx-auto" style="width: 350px;">
                        <input class="form-control rounded-pill px-3" type="search" placeholder="Tìm kiếm dự án, thành viên..."
                               aria-label="Search" />
                    </form>

                    <!-- RIGHT ICONS -->
                    <div class="d-flex align-items-center">

                        <!-- Icon 1 -->
                        <img src="~/images/icon1.png"
                             style="width: 32px; height: 32px; margin-right: 12px; cursor: pointer;" 
                             alt="Notification" />

                        <!-- Icon 2 -->
                        <img src="~/images/icon2.png"
                             style="width: 32px; height: 32px; cursor: pointer;" 
                             alt="Settings" />

                    </div>

                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div class="sidebar">
        <h5>MENU</h5>

        <a asp-controller="Home" asp-action="Index" class="menu-item">
            Tổng quan
        </a>

        <a asp-controller="Project" asp-action="Index" class="menu-item">
            Dự án của tôi
        </a>

        <a href="#" class="menu-item">
            Nhóm của tôi
        </a>

        @* MENTOR *@
        @if (roleId == 1)
        {
            <a asp-controller="ProjectManagement" asp-action="Create" class="menu-item">
                <i class="bi bi-plus-circle"></i> Tạo dự án mới
            </a>
        }

        <hr />

        <h6 class="mt-3 text-uppercase text-muted" style="font-size: 0.85rem;">WORKSPACE</h6>
        
        @{
            var projects = ViewBag.Projects as List<PorjectManagement.Models.ViewModels.ProjectListVM>;
        }

        @if (projects != null && projects.Any())
        {
            int index = 1;
            foreach (var project in projects)
            {
                <a asp-controller="Workspace" 
                   asp-action="Details" 
                   asp-route-id="@project.ProjectId" 
                   class="menu-item d-flex align-items-center">
                    <span class="me-2 text-muted" style="min-width: 25px;">@(index++).</span>
                    <span class="text-truncate">@project.ProjectName</span>
                </a>
            }
        }
        else
        {
            <small class="text-muted px-2">Chưa có project</small>
        }
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PorjectManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
