@using PorjectManagement.ViewModels
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskLab</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PorjectManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <style>
        /* ============================
           GLOBAL
        ============================ */
        body {
            background: #f5f7fb;
            font-family: 'Segoe UI', sans-serif;
        }

        a {
            text-decoration: none;
        }

        /* ============================
           NAVBAR
        ============================ */
        .navbar {
            height: 60px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        }

        .navbar-brand {
            font-size: 20px;
            font-weight: 700;
            color: #2b65ff !important;
        }

        /* SEARCH BAR */
        .navbar input[type="search"] {
            border: 1px solid #d8d8d8;
            transition: 0.2s;
        }

            .navbar input[type="search"]:focus {
                box-shadow: 0 0 5px rgba(43, 101, 255, 0.4);
                border-color: #2b65ff;
            }

        /* LOGOUT */
        .navbar .logout-link {
            margin-right: 15px;
            font-weight: 500;
            color: #444;
        }

            .navbar .logout-link:hover {
                color: #2b65ff;
            }

        /* Icons */
        .navbar img {
            transition: 0.2s;
        }

            .navbar img:hover {
                transform: scale(1.15);
            }

        /* ============================
           SIDEBAR
        ============================ */
        .sidebar {
            width: 240px;
            height: calc(100vh - 60px);
            position: fixed;
            top: 60px;
            left: 0;
            overflow-y: auto;
        }

            .sidebar h5 {
                font-weight: 700;
                margin-bottom: 15px;
                color: #222;
            }

            .sidebar .menu-item {
                padding: 10px 8px;
                border-radius: 8px;
                cursor: pointer;
                font-size: 15px;
                margin-bottom: 6px;
                text-decoration: none;
                color: inherit;
                display: block;
            }

        /* MENU ITEM */
        .menu-item {
            padding: 10px 12px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 15px;
            margin-bottom: 6px;
            transition: 0.2s;

        }

            .menu-item a {
                color: inherit;
            }

            .menu-item:hover,
            .menu-item.active {
                background: #eef3ff;
                color: #2b65ff;
                font-weight: 600;
            }

        /* ============================
           MAIN CONTENT
        ============================ */
        .main-content {
            margin-left: 260px;
            padding: 30px;
        }

        footer {
            display: none;
        }

        .table thead {
            background: #f1f4ff !important;
        }

        .table tbody tr:hover {
            background: #f8faff;
        }

        /* ============================
           DASHBOARD BUTTON
        ============================ */
        .dashboard-btn {
            padding: 8px 16px;
            background: linear-gradient(135deg, #4c6ef5, #3b5bdb);
            color: white !important;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            border: none;
            transition: 0.25s ease;
        }

            .dashboard-btn:hover {
                background: linear-gradient(135deg, #364fc7, #2f44ad);
                color: #e9ecef !important;
                transform: translateY(-2px);
                box-shadow: 0px 4px 10px rgba(0,0,0,0.2);
            }

        /* ============================
           BUTTONS FOR TOOLBAR
        ============================ */
        .btn-tool {
            background: white;
            border: 1px solid #d8d8d8;
            padding: 6px 12px;
            border-radius: 6px;
            transition: 0.2s;
        }

            .btn-tool:hover {
                background: #eef3ff;
                color: #2b65ff;
                border-color: #c3d4ff;
            }

        /* ============================
           SCROLLBAR CUSTOM
        ============================ */
        ::-webkit-scrollbar {
            width: 7px;
        }

        ::-webkit-scrollbar-track {
            background: #f0f2f7;
        }

        ::-webkit-scrollbar-thumb {
            background: #b9c4e2;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #8ea2d8;
            }

        .btn-logout {
            padding: 8px 18px;
            background: linear-gradient(135deg, #fa5252, #e03131);
            color: #fff !important;
            border-radius: 999px;
            font-weight: 600;
            text-decoration: none;
            transition: 0.25s ease;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

            .btn-logout:hover {
                background: linear-gradient(135deg, #c92a2a, #a51111);
                transform: translateY(-2px);
                box-shadow: 0 6px 14px rgba(0,0,0,0.3);
            }
        /* ==========================================
           NAVBAR: PROFILE + LOGOUT BUTTONS
        ========================================== */

        .btn-profile {
            padding: 8px 18px;
            background: linear-gradient(135deg, #4dabf7, #1c7ed6);
            color: #fff !important;
            border-radius: 999px;
            font-weight: 600;
            text-decoration: none;
            transition: 0.25s ease;
            display: inline-flex;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        }

            .btn-profile:hover {
                background: linear-gradient(135deg, #1c7ed6, #1864ab);
                transform: translateY(-2px);
                box-shadow: 0 6px 14px rgba(0,0,0,0.25);
                color: #fff !important;
            }

        .btn-logout-nav {
            padding: 8px 18px;
            background: linear-gradient(135deg, #fa5252, #e03131);
            color: #fff !important;
            border-radius: 999px;
            font-weight: 600;
            text-decoration: none;
            transition: 0.25s ease;
            display: inline-flex;
            align-items: center;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

            .btn-logout-nav:hover {
                background: linear-gradient(135deg, #c92a2a, #a51111);
                transform: translateY(-2px);
                box-shadow: 0 6px 14px rgba(0,0,0,0.3);
            }
    </style>
</head>
<body>
    @{
        var roleId = Context.Session.GetInt32("RoleId");
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <!-- Logo -->
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    TaskLab
                </a>

                <!-- Mobile button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content -->
                <div class="collapse navbar-collapse justify-content-between" id="mainNavbar">
                    <!-- SEARCH BAR (CENTER) -->
                    <form class="d-flex mx-auto" style="width: 350px; visibility: hidden;">
                        <input class="form-control rounded-pill px-3" type="search" placeholder="Search for project, member..."
                               aria-label="Search" />
                    </form>
                    <!-- RIGHT ICONS -->
                    <div class="d-flex align-items-center gap-2">
                        <button id="themeToggle" class="btn btn-outline-secondary ms-2">
                            🌙
                        </button>
                        <a href="/User/Profile?userId=@roleId" class="btn-profile">
                            <i class="bi bi-person-circle me-1"></i> Profile
                        </a>

                        <a href="/User/LogOut" class="btn-logout-nav">
                            <i class="bi bi-box-arrow-right me-1"></i> Log out
                        </a>

                    </div>


                </div>
            </div>
        </nav>
    </header>

    <!-- Sidebar -->
    <div class="sidebar">

        <a asp-controller="Home" asp-action="Index" class="menu-item">
            Overview
        </a>

        <a asp-controller="Project" asp-action="Index" class="menu-item">
            My projects
        </a>

        @* MENTOR *@
        @if (roleId == 1)
        {
            <a asp-controller="ProjectManagement" asp-action="Create" class="menu-item">
                <i class="bi bi-plus-circle"></i> New project
            </a>
        }

        <hr />

        <h6 class="mt-3 text-uppercase text-muted" style="font-size: 0.85rem;">WORKSPACE</h6>
        
        @{
            var projects = ViewBag.Projects as List<ProjectListVM>;
        }

        @if (projects != null && projects.Any())
        {
            int index = 1;
            foreach (var project in projects)
            {
                <a asp-controller="Workspace" 
                   asp-action="Details" 
                   asp-route-id="@project.ProjectId" 
                   class="menu-item d-flex align-items-center">
                    <span class="me-2 text-muted" style="min-width: 25px;">@(index++).</span>
                    <span class="text-truncate">@project.ProjectName</span>
                </a>
            }
        }
        else
        {
            <small class="text-muted px-2"></small>
        }
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PorjectManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        const toggleBtn = document.getElementById("themeToggle");
        const currentTheme = localStorage.getItem("theme");

        if (currentTheme === "dark") {
            document.documentElement.setAttribute("data-theme", "dark");
            toggleBtn.innerText = "☀";
        }

        toggleBtn?.addEventListener("click", () => {
            let theme = document.documentElement.getAttribute("data-theme");

            if (theme === "dark") {
                document.documentElement.removeAttribute("data-theme");
                localStorage.setItem("theme", "light");
                toggleBtn.innerText = "🌙";
            } else {
                document.documentElement.setAttribute("data-theme", "dark");
                localStorage.setItem("theme", "dark");
                toggleBtn.innerText = "☀";
            }
        });
    </script>
</body>
</html>

