@model PorjectManagement.Models.User
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="container mt-4" style="max-width: 700px;">
    <h2 class="mb-4 fw-bold">User profile</h2>

    <div class="border p-4 rounded shadow-sm user-profile-card">
        <div class="text-center mb-4">
            <img src="@(string.IsNullOrEmpty(Model.AvatarUrl)
                     ? Url.Content("~/images/default-avatar.png")
                     : Model.AvatarUrl)"
                 alt="Avatar"
                 class="rounded-circle border"
                 style="width: 140px; height: 140px; object-fit: cover;">

        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Full name</label>
            <input class="form-control" value="@Model.FullName" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Created at</label>
            <input class="form-control"
                   value="@Model.CreatedAt?.ToString("yyyy/MM/dd")"
                   readonly />
        </div>
        <div class="mb-3">
            <label class="form-label fw-bold">Projects</label>
            <ul class="list-group">
                @foreach (var up in Model.UserProjects)
                {
                    <li class="list-group-item">@up.Project.ProjectName</li>
                }
            </ul>
        </div>

    </div>
</div>
