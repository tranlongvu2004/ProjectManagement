@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form method="post" action="/User/Login">
    <div>
        <label>Email:</label>
        <input type="text" name="email" />
    </div>

    <div>
        <label>Password:</label>
        <input type="password" name="password" />
    </div>

    @if (ViewBag.Error != null)
    {
        <p style="color:red">@ViewBag.Error</p>
    }

    <button type="submit">Login</button>
</form>
