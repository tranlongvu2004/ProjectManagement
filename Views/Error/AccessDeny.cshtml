@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Access Denied</title>
    <style>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" / >
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f1f3f5;
            font-family: Segoe UI, sans-serif;
        }

        .card {
            background: white;
            padding: 40px;
            border-radius: 14px;
            text-align: center;
            width: 420px;
            box-shadow: 0 12px 30px rgba(0,0,0,.15);
        }

        h1 {
            margin-bottom: 10px;
        }

        p {
            color: #6c757d;
            margin-bottom: 30px;
        }

        .btn-group {
            display: flex;
            gap: 12px;
            justify-content: center;
        }

        button, a {
            padding: 10px 18px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
        }

        .btn-back {
            background: #0d6efd;
            color: white;
        }

        .btn-home {
            background: #e9ecef;
            color: #212529;
        }
    </style>
</head>
<body>

    <div class="card">
        <h1>🚫 Access Denied</h1>
        <p>
            You do not have permission to access this resource.
            <br />
            Please contact the project leader.
        </p>

        <div class="btn-group">
            <button class="btn-back" onclick="goBack()">← Go back</button>
            <a href="/" class="btn-home">🏠 Home</a>
        </div>
    </div>

    <script>
        function goBack() {
            if (document.referrer) {
                window.history.back();
            } else {
                window.location.href = "/";
            }
        }
    </script>

</body>
</html>
