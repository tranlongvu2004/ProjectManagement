@{
    ViewData["Title"] = "Home Page";
    var roleId = Context.Session.GetInt32("RoleId");
}

@{
    Layout = "_Layout";
}

<div class="p-4">
    <h2 class="fw-bold mb-4">Chào mừng đến với ProjectManagement</h2>

    <div class="d-flex gap-3">
        <a asp-controller="Project" asp-action="Index"
           class="btn btn-primary px-4 py-2"
           style="border-radius:10px; font-size:18px;">
            <i class="bi bi-folder"></i> Danh sách dự án →
        </a>
        
        @if (roleId == 1)
        {
            <a asp-controller="ProjectManagement" asp-action="Create"
               class="btn btn-success px-4 py-2"
               style="border-radius:10px; font-size:18px;">
                <i class="bi bi-plus-circle"></i> Tạo dự án →
            </a>
        }
    </div>
</div>