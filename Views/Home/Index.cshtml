@{
    ViewData["Title"] = "Home Page";
    var roleId = Context.Session.GetInt32("RoleId") ?? 0;
}

@{
    Layout = "_Layout";
}

<div class="p-4">
    <h2 class="fw-bold mb-4">Chào mừng đến với ProjectManagement</h2>

    <div class="d-flex gap-3 flex-wrap">
        <a asp-controller="Project" asp-action="Index"
           class="btn btn-primary px-4 py-2"
           style="border-radius:10px; font-size:18px;">
            <i class="bi bi-folder"></i> Danh sách dự án
        </a>
        
        @* MENTOR *@
        @if (roleId == 1)
        {
            <a asp-controller="ProjectManagement" asp-action="Create"
               class="btn btn-success px-4 py-2"
               style="border-radius:10px; font-size:18px;">
                <i class="bi bi-plus-circle"></i> Tạo dự án
            </a>
        }
    </div>

    <div class="mt-4">
        <p class="text-muted">
            @switch (roleId)
            {
                case 1:
                    <text>Bạn đang đăng nhập với quyền <strong>Mentor</strong></text>
                    break;
                case 2:
                    <text>Bạn đang đăng nhập với quyền <strong>InternLead</strong></text>
                    break;
                case 3:
                    <text>Bạn đang đăng nhập với quyền <strong>Intern</strong></text>
                    break;
                default:
                    <text>Chào mừng bạn đến với hệ thống quản lý dự án</text>
                    break;
            }
        </p>
    </div>
</div>