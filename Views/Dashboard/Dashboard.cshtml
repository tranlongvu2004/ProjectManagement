@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    body {
        background: #ffff;
        color: black;
    }

    .dashboard-header {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .dash-toolbar button {
        background: #ffff;
        border: 1px solid #333;
        color: black;
    }

    .stat-card {
        background: #ffff;
        border-radius: 12px;
        padding: 20px;
        min-height: 160px;
        text-align: center;
        border: 1px solid #2f3146;
    }

    .stat-number {
        font-size: 42px;
        margin-top: 20px;
        font-weight: 500;
    }
</style>


<div class="dashboard-header">Dashboard and reporting ⭐</div>

<!-- Toolbar -->
<div class="dash-toolbar d-flex gap-2 mb-4">

    <input id="filter" class="form-control form-control-sm w-auto" placeholder="Type to filter" />
    <button class="btn btn-sm" onclick=""><i class="fa fa-save"></i></button>

    <button class="btn btn-sm">People</button>
    <button class="btn btn-sm">Filter</button>

    <div class="ms-auto d-flex gap-2">
        <button class="btn btn-sm">Export</button>
        <button class="btn btn-sm">Invite</button>
    </div>
</div>


<!-- STAT CARDS -->
<div class="row g-3">

    <div class="col-md-3">
        <div class="stat-card">
            <div>All Tasks</div>
            <div class="stat-number">@ViewBag.TotalTasks</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div>Doing</div>
            <div class="stat-number">@ViewBag.inProgressTasks</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div>Stuck</div>
            <div class="stat-number">@ViewBag.StuckTasks</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div>Done</div>
            <div class="stat-number">@ViewBag.CompletedTasks</div>
        </div>
    </div>

</div>

<script>

    let tasks = @Html.Raw(ViewBag.Tasks);
    const input = document.getElementById("filter");
    input.addEventListener("keyup", function(){
        let keyword = this.value.toLowerCase();
        let filtered = tasks.filter(t => t.Title.toLowerCase().includes(keyword));

        document.querySelector(".stat-card:nth-child(1) .stat-number").textContent = filtered.length;
        document.querySelector(".stat-card:nth-child(2) .stat-number").textContent = filtered.filter(t => t.Status === "Doing").length;
        document.querySelector(".stat-card:nth-child(3) .stat-number").textContent = filtered.filter(t => t.Status === "Stuck").length;
        document.querySelector(".stat-card:nth-child(4) .stat-number").textContent = filtered.filter(t => t.Status === "Completed").length;
    });

</script>



