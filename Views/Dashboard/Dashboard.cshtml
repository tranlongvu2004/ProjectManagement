@{
    ViewData["Title"] = "Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<style>
    body {
        background: #0f1120;
        color: white;
    }

    .dashboard-header {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .dash-toolbar button {
        background: #1c1e2e;
        border: 1px solid #333;
        color: white;
    }

    .stat-card {
        background: #1b1d2c;
        border-radius: 12px;
        padding: 20px;
        min-height: 160px;
        text-align: center;
        border: 1px solid #2f3146;
    }

    .stat-number {
        font-size: 42px;
        margin-top: 20px;
        font-weight: 500;
    }

    .panel-title {
        font-size: 18px;
        font-weight: 500;
        margin-bottom: 12px;
    }

    .chart-panel {
        background: #1b1d2c;
        border-radius: 12px;
        padding: 20px;
        border: 1px solid #2f3146;
        min-height: 320px;
    }

    .chart-empty {
        text-align: center;
        margin-top: 40px;
        color: #9ea0b1;
    }
</style>


<div class="dashboard-header">Dashboard and reporting ⭐</div>

<!-- Toolbar -->
<div class="dash-toolbar d-flex gap-2 mb-4">
    <button class="btn btn-sm"><i class="bi bi-plus"></i> Add widget</button>
    <button class="btn btn-sm">1 connected board</button>

    <input class="form-control form-control-sm w-auto" placeholder="Type to filter" />

    <button class="btn btn-sm">People</button>
    <button class="btn btn-sm">Filter</button>

    <div class="ms-auto d-flex gap-2">
        <button class="btn btn-sm">Export</button>
        <button class="btn btn-sm">Invite</button>
    </div>
</div>


<!-- STAT CARDS -->
<div class="row g-3">

    <div class="col-md-3">
        <div class="stat-card">
            <div>All Tasks</div>
            <div class="stat-number">@ViewBag.TotalTasks</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div>In progress</div>
            <div class="stat-number">@ViewBag.inProgressTasks</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div>Stuck</div>
            <div class="stat-number">@ViewBag.StuckTasks</div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card">
            <div>Done</div>
            <div class="stat-number">@ViewBag.CompletedTasks</div>
        </div>
    </div>

</div>


