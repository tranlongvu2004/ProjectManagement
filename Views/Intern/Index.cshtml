@model IEnumerable<PorjectManagement.Models.User>

<h2 class="fw-bold">Danh sách thực tập sinh</h2>
<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3">Họ tên</th>
                        <th class="py-3">Email</th>
                        <th class="py-3">Trạng thái</th>
                        <th class="py-3">Ngày tạo</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int rowIndex = 1;
                    }
                    @foreach (var u in Model)
                    {
                        <tr>
                            <!-- Họ tên -->
                            <td class="py-3 fw-semibold text-dark">
                                <a asp-controller="User"
                                   asp-action="Profile"
                                   asp-route-id="@u.UserId"
                                   class="text-decoration-none fw-semibold text-primary">
                                    @u.FullName
                                </a>
                            </td>

                            <!-- Email -->
                            <td class="py-3 text-muted">
                                @u.Email
                            </td>

                            <!-- Trạng thái -->
                            <td class="py-3">
                                @switch (u.Status)
                                {
                                    case UserStatus.Active:
                                        <span class="badge bg-success">Đang hoạt động</span>
                                        break;

                                    case UserStatus.Inactive:
                                        <span class="badge bg-secondary">Không hoạt động</span>
                                        break;

                                    case UserStatus.Dropped:
                                        <span class="badge bg-danger">Dừng thực tập</span>
                                        break;

                                    default:
                                        <span class="badge bg-light text-dark">Không rõ</span>
                                        break;
                                }
                            </td>

                            <!-- Ngày tạo -->
                            <td class="py-3">
                                @u.CreatedAt?.ToString("dd/MM/yyyy")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
