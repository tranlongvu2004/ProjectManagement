@using PorjectManagement.ViewModels
@model InternFilterVM


<h2 class="fw-bold">List of Interns</h2>
<form method="get" class="row g-2 mb-3">
    <div class="col-md-5">
        <label class="form-label fw-semibold text-muted">Search by intern's name</label>
        <input name="keyword"
               value="@Model.Keyword"
               class="form-control"
               placeholder="Enter intern's name" />
    </div>
    <div class="col-md-7 row">
        <label class="col-md-12 form-label fw-semibold text-muted">Sort by</label>
        <div class="col-md-5">
            <select name="sortBy" class="form-select">
                <option value="name" selected="@(Model.SortBy == "name")">
                    Name
                </option>
                <option value="created" selected="@(Model.SortBy == "created")">
                    Created at
                </option>
            </select>
        </div>

        <div class="col-md-5">
            <select name="sortDir" class="form-select">
                <option value="asc" selected="@(Model.SortDir == "asc")">
                    Ascending
                </option>
                <option value="desc" selected="@(Model.SortDir == "desc")">
                    Descending
                </option>
            </select>
        </div>

        <div class="col-md-2">
            <button class="btn btn-primary w-100">
                <i class="bi"></i> Apply
            </button>
        </div>
    </div>
   
        
</form>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="py-3">Name</th>
                        <th class="py-3">Email</th>
                        <th class="py-3">Created at</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        int rowIndex = 1;
                    }
                    @foreach (var u in Model.Interns)
                    {
                        <tr>
                            <td class="py-3 fw-semibold">
                                <a asp-controller="User"
                                   asp-action="ViewProfile"
                                   asp-route-userid="@u.UserId"
                                   class="text-decoration-none fw-semibold text-primary">
                                    @u.FullName
                                </a>
                            </td>

                            <td class="py-3 text-muted">@u.Email</td>

                            <td class="py-3">
                                @u.CreatedAt?.ToString("dd/MM/yyyy")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@(Model.Page - 1)"
                   asp-route-keyword="@Model.Keyword"
                   asp-route-sortBy="@Model.SortBy"
                   asp-route-sortDir="@Model.SortDir">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link"
                       asp-route-page="@i"
                       asp-route-keyword="@Model.Keyword"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortDir="@Model.SortDir">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-route-page="@(Model.Page + 1)"
                   asp-route-keyword="@Model.Keyword"
                   asp-route-sortBy="@Model.SortBy"
                   asp-route-sortDir="@Model.SortDir">
                    Next
                </a>
            </li>

        </ul>
    </nav>
}
