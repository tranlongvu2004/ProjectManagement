@model PorjectManagement.ViewModels.ProjectUpdateViewModel

@{
    ViewData["Title"] = "Update Project";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">
                    <i class="bi bi-pencil-square"></i> Update Project
                </h2>
                <a asp-action="Details" asp-controller="Workspace" asp-route-id="@Model.ProjectId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>

            <!-- Error/Success Messages -->
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            else if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Form Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" id="editProjectForm">
                        <input type="hidden" asp-for="ProjectId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Project Name -->
                        <div class="mb-4">
                            <label asp-for="ProjectName" class="form-label fw-semibold">
                                <i class="bi bi-pencil-square text-primary"></i> Project Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ProjectName" class="form-control form-control-lg" 
                                   placeholder="Ex: Lab Management System" />
                            <span asp-validation-for="ProjectName" class="text-danger small"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold">
                                <i class="bi bi-card-text text-info"></i> Description
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Description about project..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Deadline -->
                        <div class="mb-4">
                            <label asp-for="Deadline" class="form-label fw-semibold">
                                <i class="bi bi-calendar-event text-warning"></i> Deadline <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Deadline" 
                                   type="date" 
                                   class="form-control" 
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="Deadline" class="text-danger small"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <label asp-for="Status" class="form-label fw-semibold">
                                <i class="bi bi-flag-fill text-success"></i> Status <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<PorjectManagement.Models.ProjectStatus>()">
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Current Members Info -->
                        <div class="mb-3">
                            <h5 class="fw-semibold">
                                <i class="bi bi-people-fill text-primary"></i> Current members
                            </h5>
                            <div class="card border-0 bg-light p-3">
                                @if (Model.CurrentMembers != null && Model.CurrentMembers.Any())
                                {
                                    @foreach (var member in Model.CurrentMembers)
                                    {
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="avatar-circle bg-secondary text-white me-2" style="width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                                @member.FullName.Substring(0, 1).ToUpper()
                                            </div>
                                            <div>
                                                <div class="fw-semibold">
                                                    @member.FullName 
                                                    @if (member.IsLeader)
                                                    {
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-star-fill"></i> Leader
                                                        </span>
                                                    }
                                                </div>
                                                <small class="text-muted">@member.Email - @member.RoleName</small>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <!-- Select Members -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-people-fill text-success"></i> Update member <span class="text-danger">*</span>
                            </label>
                            <div class="card border-0 bg-light p-3" style="max-height: 300px; overflow-y: auto;">
                                @if (Model.AvailableUsers != null && Model.AvailableUsers.Any())
                                {
                                    @foreach (var user in Model.AvailableUsers)
                                    {
                                        var isChecked = Model.SelectedUserIds != null && Model.SelectedUserIds.Contains(user.UserId);
                                        <div class="form-check mb-2">
                                            <input class="form-check-input user-checkbox" 
                                                   type="checkbox" 
                                                   name="SelectedUserIds" 
                                                   value="@user.UserId" 
                                                   id="user_@user.UserId"
                                                   @(isChecked ? "checked" : "") />
                                            <label class="form-check-label d-flex align-items-center" for="user_@user.UserId">
                                                <div class="avatar-circle bg-primary text-white me-2" style="width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: bold;">
                                                    @user.FullName.Substring(0, 1).ToUpper()
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@user.FullName</div>
                                                    <small class="text-muted">@user.Email - @user.RoleName</small>
                                                </div>
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">No user available.</p>
                                }
                            </div>
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> Selected: <span id="selected-count">0</span> Member
                            </small>
                            <div>
                                <span asp-validation-for="SelectedUserIds" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Select Leader -->
                        <div class="mb-4">
                            <label asp-for="LeaderId" class="form-label fw-semibold">
                                <i class="bi bi-star-fill text-warning"></i> Choose Leader <span class="text-danger">*</span>
                            </label>
                            <select asp-for="LeaderId" class="form-select" id="leader-select" required>
                                <option value="">-- Pls choose Leader --</option>
                            </select>
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> The leader must be the member chosen above.
                            </small>
                            <span asp-validation-for="LeaderId" class="text-danger small d-block"></span>
                        </div>

                        <hr class="my-4" />

                        <!-- Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-controller="Workspace" asp-route-id="@Model.ProjectId" class="btn btn-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle"></i> Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function () {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            $('.user-checkbox').on('change', function () {
                updateSelectedCount();
                updateLeaderOptions();
            });

            function updateSelectedCount() {
                const count = $('.user-checkbox:checked').length;
                $('#selected-count').text(count);
            }

            function updateLeaderOptions() {
                const leaderSelect = $('#leader-select');
                const currentLeader = leaderSelect.val();
                
                // Clear existing options (trừ option đầu tiên)
                leaderSelect.find('option:not(:first)').remove();

                // Add options cho các user đã chọn
                $('.user-checkbox:checked').each(function () {
                    const userId = $(this).val();
                    const userName = $(this).next('label').find('.fw-semibold').text();
                    
                    leaderSelect.append(
                        $('<option></option>')
                            .val(userId)
                            .text(userName)
                    );
                });

                // Restore leader nếu vẫn còn trong danh sách
                if (currentLeader) {
                    leaderSelect.val(currentLeader);
                }
            }

            // VALIDATE TRƯỚC KHI SUBMIT
            $('#editProjectForm').on('submit', function(e) {
                const selectedMembers = $('.user-checkbox:checked').length;
                const selectedLeader = $('#leader-select').val();

                if (selectedMembers === 0) {
                    e.preventDefault();
                    alert('Vui lòng chọn ít nhất 1 thành viên!');
                    return false;
                }

                if (!selectedLeader) {
                    e.preventDefault();
                    alert('Vui lòng chọn Leader cho dự án!');
                    $('#leader-select').focus();
                    return false;
                }
            });

            // Initialize on load
            updateSelectedCount();
            updateLeaderOptions();
        });
    </script>
}

<style>
    .avatar-circle {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
        border-radius: 12px;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #5568d3 0%, #65408b 100%);
    }

    .alert {
        border-radius: 10px;
        border-left: 4px solid;
    }

    .alert-danger {
        border-left-color: #dc3545;
    }

    .alert-success {
        border-left-color: #28a745;
    }
</style>