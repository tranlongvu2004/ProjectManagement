@model PorjectManagement.ViewModels.TaskAssignViewModel
@Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })

<style>
    /* ---- CARD ---- */
    .assign-card {
        width: 520px;
        margin: 50px auto;
        border-radius: 16px;
        overflow: hidden;
        background: #ffffff;
        border: 1px solid #eaeaea;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.06);
        transition: 0.25s ease;
    }

        .assign-card:hover {
            box-shadow: 0 10px 28px rgba(0, 0, 0, 0.08);
            transform: translateY(-2px);
        }

    /* ---- HEADER ---- */
    .assign-header {
        background: #1a73e8;
        padding: 18px 26px;
        color: #fff;
        font-size: 20px;
        font-weight: 600;
        letter-spacing: 0.4px;
    }

    /* ---- BODY ---- */
    .assign-body {
        padding: 30px;
        font-size: 15px;
        color: #333;
    }

    /* ---- SELECT ---- */
    .form-select-custom {
        height: 48px;
        border-radius: 12px;
        padding: 10px 14px;
        border: 1px solid #d0d7de;
        background: #fafafa;
        transition: border 0.2s;
    }

        .form-select-custom:focus {
            border: 1px solid #1a73e8;
            box-shadow: 0 0 0 2px rgba(26, 115, 232, 0.15);
            background: white;
        }

    /* ---- BUTTONS ---- */
    .btn-cancel {
        background: #fff;
        border: 1px solid #d6d6d6;
        padding: 9px 22px;
        border-radius: 10px;
        font-weight: 500;
        color: #444;
        transition: 0.2s;
    }

        .btn-cancel:hover {
            background: #f2f2f2;
            border-color: #c8c8c8;
        }

    .btn-assign {
        background: #1a73e8;
        color: #fff;
        padding: 10px 26px;
        border-radius: 10px;
        border: none;
        font-weight: 600;
        transition: 0.2s;
    }

        .btn-assign:hover {
            background: #145fc4;
        }
</style>


<div class="assign-card">

    <div class="assign-header">
        Giao công việc
    </div>

    <div class="assign-body">

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }

        <form method="post">

            <input type="hidden" asp-for="TaskId" />

            <label class="form-label fw-semibold mb-2">Chọn thành viên</label>

            <select asp-for="SelectedUserId" class="form-select form-select-custom mb-4">
                <option value="">-- Chọn thành viên --</option>
                @foreach (var u in Model.Users)
                {
                    <option value="@u.UserId">@u.FullName (@u.Email)</option>
                }
            </select>

            <div class="d-flex justify-content-between">

                <a asp-controller="Backlog"
                   asp-action="BacklogUI"
                   asp-route-projectId="@Model.ProjectId"
                   class="btn-cancel">
                    Hủy
                </a>

                <button class="btn-assign">
                    Giao công việc
                </button>
            </div>

        </form>
    </div>
</div>
