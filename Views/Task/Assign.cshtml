@model PorjectManagement.ViewModels.TaskAssignViewModel

@if (ViewBag.Success == true)
{
    <div class="alert alert-success">
        Assign task successfully!
    </div>
}

@Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="assign-page">

    <div class="assign-card">

        <div class="assign-header">
            Assign Task
        </div>

        <div class="assign-body">
            <form method="post">

                <input type="hidden" asp-for="TaskId" />

                <label class="form-label fw-semibold mb-2">
                    Select Member
                </label>

                <select asp-for="SelectedUserId"
                        class="form-select assign-select mb-4">
                    <option value="">-- Select Member --</option>
                    @foreach (var u in Model.Users)
                    {
                        <option value="@u.UserId">
                            @u.FullName (@u.Email)
                        </option>
                    }
                </select>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Backlog"
                       asp-action="BacklogUI"
                       asp-route-projectId="@Model.ProjectId"
                       class="btn btn-assign-cancel">
                        Hủy
                    </a>

                    <button class="btn btn-assign-submit">
                        Assign Task
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
