@model PorjectManagement.ViewModels.TaskCreateViewModel

@{
    ViewData["Title"] = "CREATE NEW TASK";
}
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">
        @ViewBag.SuccessMessage
    </div>
}


<style>
    .page-title {
        font-size: 30px;
        font-weight: 800;
        margin-bottom: 25px;
        background: linear-gradient(135deg, #4A6CF7, #8B5CF6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .card {
        background: #fff;
        border-radius: 14px;
        padding: 25px;
        box-shadow: 0 4px 18px rgba(0,0,0,0.08);
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .input-custom {
        border-radius: 10px;
        padding: 10px 14px;
    }

    /* ----------- MEMBER LIST ĐẸP NHƯ YÊU CẦU ----------- */

    .member-list {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-top: 10px;
    }

    .member-item {
        display: flex;
        align-items: center;
        gap: 14px;
        padding: 14px 16px;
        background: #fff;
        border-radius: 14px;
        cursor: pointer;
        transition: 0.2s ease;
        border: 1px solid #e5e7eb;
    }

    .member-item:hover {
        background: #f3f4ff;
        transform: translateX(4px);
    }

    .member-checkbox {
        width: 18px;
        height: 18px;
        cursor: pointer;
        margin-top: 0; /* chống lệch dòng */
    }

    .avatar {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 18px;
        color: white;
        box-shadow: 0 4px 10px rgba(99,102,241,0.4);
    }

    .member-info {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
    }

    .member-name {
        font-size: 15px;
        font-weight: 600;
        color: #111;
    }

    .member-email {
        font-size: 13px;
        color: #666;
    }

    .btn-primary-custom {
        background: #4169E1;
        border: none;
        padding: 10px 18px;
        border-radius: 10px;
        font-weight: 600;
        transition: 0.2s;
    }

    .btn-primary-custom:hover {
        background: #3154b4;
    }
</style>


<h2 class="page-title">Create New Task</h2>

<div class="card">

    <form asp-action="CreateTask" method="post">

        <input type="hidden" asp-for="ProjectId" />
        @if (Model.ProjectId == 0)
        {
            <div class="alert alert-danger">
                Cannot determine the project. Please access from the Backlog page.
            </div>
            return;
        }

        @if (Model.ProjectId > 0)
        {
            <div class="mb-4">
                <label class="form-label">Task Name</label>
                <input asp-for="Title" class="form-control input-custom" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control input-custom" rows="3"></textarea>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label class="form-label">Priority</label>
                    <select asp-for="Priority" class="form-select input-custom">
    <option value="0">Low</option>
    <option value="1">Medium</option>
    <option value="2">High</option>
    <option value="3">Necessary</option>
</select>

                </div>

                <div class="col-md-6">
                    <label class="form-label">Deadline</label>
                    @* <input asp-for="Deadline" type="date" class="form-control input-custom" /> *@
                    <input asp-for="Deadline" type="datetime-local" class="form-control" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>


                </div>
            </div>
            <div class="form-check">
    <input class="form-check-input"
           type="checkbox"
           id="IsSubTask"
           name="IsSubTask"
           value="true" />
    <label class="form-check-label" for="IsSubTask">
        This is a subtask
    </label>
</div>
<div id="parentTaskWrapper" style="display:none;" class="mb-3">
    <label class="form-label">Parent Task</label>
  <select class="form-control" name="ParentTaskId" id="ParentTaskId">
    <option value="">-- Select parent task --</option>

    @foreach (var t in Model.ParentTasks)
    {
        <option value="@t.Value">@t.Text</option>
    }
</select>

</div>



            <div class="mb-4">
                <label class="form-label">Assign for intern</label>

                @if (Model.ProjectMembers != null && Model.ProjectMembers.Any())
                {
                    <div class="card" style="padding:0">
                        @foreach (var u in Model.ProjectMembers)
                        {
                            <label class="member-item">
                                <input type="checkbox" name="SelectedUserIds" value="@u.UserId" style="transform: scale(1.2);" />

                                <div class="avatar">
                                    @u.FullName.Substring(0,1).ToUpper()
                                </div>

                                <div style="flex-grow:1;">
                                    <div style="font-weight:600">@u.FullName</div>
                                    <div class="text-muted" style="font-size:13px">@u.Email</div>
                                </div>

                                <span class="badge-role">@u.Role?.RoleName</span>
                            </label>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">This project has no member yet.</p>
                }
            </div>

            <div class="text-end">
                <a href="/Backlog/BacklogUI?ProjectId=@Model.ProjectId" class="btn btn-outline-secondary me-2">Cancel</a>
                <a href="/Backlog/BacklogUI?ProjectId=@Model.ProjectId" class="btn btn-outline-secondary me-2">Back</a>
                <button class="btn btn-primary-custom">Create new Task</button>
            </div>
        }

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const isSubTaskCheckbox = document.getElementById("IsSubTask");
            const parentTaskWrapper = document.getElementById("parentTaskWrapper");

            if (!isSubTaskCheckbox || !parentTaskWrapper) {
                console.log("❌ Cannot find checkbox and dropdown");
                return;
            }

            isSubTaskCheckbox.addEventListener("change", function () {
                if (this.checked) {
                    parentTaskWrapper.style.display = "block";
                } else {
                    parentTaskWrapper.style.display = "none";
                }
            });
        });
    </script>
}
