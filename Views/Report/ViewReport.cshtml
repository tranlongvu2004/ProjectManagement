@model List<CreateReportViewModel>

<h1 class="mb-4">Team Performance Report</h1>
@foreach (var report in Model)
{
    <table class="table table-bordered mb-4 text-center">
        <tr>
            <th>Members</th>
            @foreach (var m in report.TeamMembers)
            {
                <th>@m.FullName</th>
            }
        </tr>


        <tr>
            <th>Plan</th>
            @foreach (var m in report.TeamMembers)
            {
                <td>@m.Plan</td>
            }
        </tr>


        <tr>
            <th>Actual</th>
            @foreach (var m in report.TeamMembers)
            {
                <td>@m.Actual</td>
            }
        </tr>
        <tr>
            <th>Progress %</th>
            @foreach (var m in report.TeamMembers)
            {
                <td>@m.ProgressPercent %</td>
            }
        </tr>
        <tr>
            <th>Create At:</th>           
                <td>@report.CreatedAt?.ToString("yyyy/MM/dd HH:mm:ss")</td>
        </tr>

        <tr class="table-warning">
            <th>Team Execute %</th>
            <td colspan="@report.TeamMembers.Count">
                @report.TeamExecutePercent %
            </td>
        </tr>

    </table>
}
