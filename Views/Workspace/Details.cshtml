@using PorjectManagement.Models
@model PorjectManagement.ViewModels.ProjectWorkspaceViewModel

@{
    ViewData["Title"] = Model.Project.ProjectName;
    
    // Lấy danh sách projects cho sidebar
    var projects = ViewBag.Projects as List<PorjectManagement.Models.ViewModels.ProjectListVM>;
    
    // Lấy tasks cho Backlog
    var backlogTasks = ViewBag.BacklogTasks as List<PorjectManagement.Models.Task>;
    int projectId = ViewBag.ProjectId ?? 0;
}

<div class="container-fluid p-0">
    <div class="row g-0">
        <!-- SIDEBAR -->
        <partial name="_SidebarPartial" model="@projects" />

        <!-- MAIN CONTENT -->
        <div class="col-md-10 offset-md-2">
            <div class="p-4">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <h2 class="fw-bold mb-2">@Model.Project.ProjectName</h2>
                        <p class="text-muted mb-0">
                            Deadline: @Model.Project.Deadline.ToString("dd/MM/yyyy")
                            <span class="ms-3">
                                @switch (Model.Project.Status)
                                {
                                    case "InProgress":
                                        <span class="badge bg-primary">Đang tiến hành</span>
                                        break;
                                    case "Completed":
                                        <span class="badge bg-success">Hoàn thành</span>
                                        break;
                                    case "Dropped":
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                }
                            </span>
                        </p>
                    </div>
                    <a asp-controller="Project" asp-action="Index" class="btn btn-outline-secondary">
                        Quay lại
                    </a>
                </div>

                <!-- Description -->
                @if (!string.IsNullOrEmpty(Model.Project.Description))
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h6 class="fw-bold mb-2">Mô tả</h6>
                            <p class="text-muted mb-0">@Model.Project.Description</p>
                        </div>
                    </div>
                }

                <!-- Overall Progress -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Tiến Độ Tổng Thể</h6>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar bg-success" 
                                 role="progressbar" 
                                 style="width: @Model.OverallProgress%">
                                @Model.OverallProgress%
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Members Section - BÊN TRÁI -->
                    <div class="col-md-4 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="fw-bold mb-4">Thành Viên (@Model.Members.Count)</h5>
                                
                                @if (Model.Members != null && Model.Members.Any())
                                {
                                    <div style="max-height: 600px; overflow-y: auto;">
                                        @foreach (var member in Model.Members)
                                        {
                                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                                <div class="avatar-circle me-3" 
                                                     style="width: 48px; height: 48px; border-radius: 50%; 
                                                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                                                            display: flex; align-items: center; justify-content: center;">
                                                    <span class="text-white fw-bold">
                                                        @member.FullName.Substring(0, 1).ToUpper()
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <div class="fw-semibold">@member.FullName</div>
                                                    <small class="text-muted">@member.Email</small>
                                                    <div class="mt-1">
                                                        <small class="badge bg-light text-dark">@member.RoleName</small>
                                                        @if (member.IsLeader)
                                                        {
                                                            <small class="badge bg-warning text-dark ms-1">Leader</small>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted text-center py-4">Chưa có thành viên</p>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Backlog Section - BÊN PHẢI (8 cột) -->
                    <div class="col-md-8 mb-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <!-- Header với toolbar -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="fw-bold mb-0">Backlog (@(backlogTasks?.Count ?? 0))</h5>
                                    
                                    <div class="d-flex gap-2">
                                        <button id="btnSearch" class="btn btn-sm btn-light border">
                                            <i class="bi bi-search"></i> 
                                        </button>
                                        <input id="searchInput" type="text" 
                                               class="form-control form-control-sm search-hidden" 
                                               placeholder="Type to search" 
                                               style="display: none;" />
                                        
                                        <a class="btn btn-sm btn-primary"
                                           asp-controller="UserProject" 
                                           asp-action="AddMembers" 
                                           asp-route-id="@projectId">
                                            <i class="bi bi-person-plus"></i> 
                                        </a>
                                    </div>
                                </div>

                                <!-- Backlog Table -->
                                @if (backlogTasks != null && backlogTasks.Any())
                                {
                                    <div style="max-height: 600px; overflow-y: auto;">
                                        <table class="table table-hover align-middle mb-0">
                                            <thead class="table-light sticky-top">
                                                <tr>
                                                    <th>Task</th>
                                                    <th>Owner</th>
                                                    <th>Status</th>
                                                    <th>Due Date</th>
                                                    <th>Priority</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var t in backlogTasks)
                                                {
                                                    <tr>
                                                        <td>@t.Title</td>

                                                        <td>
                                                            @if (!string.IsNullOrEmpty(t.CreatedByNavigation?.FullName))
                                                            {
                                                                <span class="badge bg-success">
                                                                    @t.CreatedByNavigation.FullName
                                                                </span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-secondary">N/A</span>
                                                            }
                                                        </td>

                                                        <td>
                                                            @{
                                                                var statusClass = t.Status switch
                                                                {
                                                                    PorjectManagement.Models.TaskStatus.ToDo => "bg-warning text-dark",
                                                                    PorjectManagement.Models.TaskStatus.Doing => "bg-primary",
                                                                    PorjectManagement.Models.TaskStatus.Completed => "bg-success",
                                                                    PorjectManagement.Models.TaskStatus.Stuck => "bg-danger",
                                                                    PorjectManagement.Models.TaskStatus.Not_Started => "bg-secondary",
                                                                    _ => "bg-light text-dark"
                                                                };
                                                            }
                                                            <span class="badge @statusClass">@t.Status</span>
                                                        </td>

                                                        <td>
                                                            @if (t.Deadline.HasValue)
                                                            {
                                                                @t.Deadline.Value.ToString("MMM d")
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </td>

                                                        <td>
                                                            @{
                                                                string priorityClass = t.Priority switch
                                                                {
                                                                    PorjectManagement.Models.TaskPriority.Low => "bg-info",
                                                                    PorjectManagement.Models.TaskPriority.Medium => "bg-warning text-dark",
                                                                    PorjectManagement.Models.TaskPriority.High => "bg-dark",
                                                                    PorjectManagement.Models.TaskPriority.Necessary => "bg-danger",
                                                                    _ => "bg-light text-dark"
                                                                };
                                                            }
                                                            <span class="badge @priorityClass">@t.Priority</span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                                        <p class="mt-3">Chưa có task nào trong backlog</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 12px;
    }

    .progress {
        border-radius: 10px;
    }

    .badge {
        font-weight: 500;
        padding: 0.4em 0.8em;
    }

    .nav-link {
        border-radius: 8px;
        transition: all 0.2s;
    }

    .nav-link:hover {
        background-color: #e9ecef;
    }

    .table thead.sticky-top {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: #f8f9fa;
    }

    .search-hidden {
        display: none !important;
    }
</style>

@section Scripts {
    <script>
        const searchButton = document.getElementById("btnSearch");
        const searchInput = document.getElementById("searchInput");

        if (searchButton && searchInput) {
            searchButton.addEventListener("click", function() {
                searchButton.style.display = "none";
                searchInput.style.display = "block";
                searchInput.focus();
            });

            searchInput.addEventListener("blur", function() {
                searchInput.style.display = "none";
                searchButton.style.display = "block";
                searchInput.value = "";
                // Reset search
                const rows = document.querySelectorAll("table tbody tr");
                rows.forEach(row => row.style.display = "");
            });

            searchInput.addEventListener("keyup", function() {
                const keyword = this.value.toLowerCase();
                const rows = document.querySelectorAll("table tbody tr");
                rows.forEach(row => {
                    let matched = false;
                    const cells = row.querySelectorAll("td");
                    
                    cells.forEach(cell => {
                        if (cell.textContent.toLowerCase().includes(keyword)) {
                            matched = true;
                        }
                    });

                    row.style.display = matched ? "" : "none";
                });
            });
        }
    </script>
}