@model PorjectManagement.ViewModels.ProjectWorkspaceViewModel
@{
    ViewData["Title"] = Model.Project.ProjectName;
    var currentUserId = Context.Session.GetInt32("UserId");
    var isLeader = Model.Members.Any(x => x.UserId == currentUserId && x.IsLeader);
}

<div class="p-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h2 class="fw-bold mb-2">@Model.Project.ProjectName</h2>
            <p class="text-muted mb-0">
                Deadline: @Model.Project.Deadline.ToString("dd/MM/yyyy")
                <span class="ms-3">
                    @switch (Model.Project.Status)
                    {
                        case "InProgress":
                            <span class="badge bg-primary">Inprogress</span>
                            break;
                        case "Completed":
                            <span class="badge bg-success">Completed</span>
                            break;
                        case "Dropped":
                            <span class="badge bg-danger">Dropped</span>
                            break;
                    }
                </span>
            </p>
        </div>
        <div class="d-flex gap-2">
            @if (ViewBag.IsMentor == true)
            {
                <a asp-controller="ProjectManagement" 
                   asp-action="Edit" 
                   asp-route-id="@Model.Project.ProjectId" 
                   class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Update
                </a>
            }
            
            <a asp-controller="Backlog" 
               asp-action="BacklogUI" 
               asp-route-projectId="@Model.Project.ProjectId" 
               class="btn btn-primary">
                <i class="bi bi-list-task"></i> View Backlog
            </a>
            <a asp-controller="Project" asp-action="Index" class="btn btn-outline-secondary">
                Back
            </a>
        </div>
    </div>

    <!-- Description -->
    @if (!string.IsNullOrEmpty(Model.Project.Description))
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h6 class="fw-bold mb-2">Description</h6>
                <p class="text-muted mb-0">@Model.Project.Description</p>
            </div>
        </div>
    }

    <!-- Overall Progress -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h6 class="fw-bold mb-3">Overall Progress</h6>
            <div class="progress" style="height: 30px;">
                <div class="progress-bar bg-success" 
                     role="progressbar" 
                     style="width: @Model.OverallProgress%">
                    @Model.OverallProgress%
                </div>
            </div>
        </div>
    </div>

    <!-- REPORTS SECTION -->
    @if (Model.Reports != null && Model.Reports.Any())
    {
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <h5 class="fw-bold mb-4">Report (@Model.Reports.Count)</h5>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Report type</th>
                                <th>Leader</th>
                                <th>File</th>
                                <th>Create At</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model.Reports)
                            {
                                <tr>
                                    <td>@report.ReportId</td>
                                    <td>
                                        <span class="badge bg-info">@report.ReportType</span>
                                    </td>
                                    <td>@report.Leader</td>
                                    <td>@report.CreatedAt?.ToString("yyyy/MM/dd HH:mm:ss")</td>
                                    <td>
                                        <a href="@report.FilePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-download"></i> Download
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Members Section -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="fw-bold mb-4">Member (@Model.Members.Count)</h5>
            
            @if (Model.Members != null && Model.Members.Any())
            {
                <div class="row">
                    @foreach (var member in Model.Members)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="d-flex align-items-center p-3 border rounded">
                                <div class="avatar-circle me-3" 
                                     style="width: 48px; height: 48px; border-radius: 50%; 
                                            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                                            display: flex; align-items: center; justify-content: center;">
                                    <span class="text-white fw-bold">
                                        @member.FullName.Substring(0, 1).ToUpper()
                                    </span>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="fw-semibold">@member.FullName</div>
                                    <small class="text-muted">@member.Email</small>
                                    <div class="mt-1">
                                        <small class="badge bg-light text-dark">@member.RoleName</small>
                                        @if (member.IsLeader)
                                        {
                                            <small class="badge bg-warning text-dark ms-1">Leader</small>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted text-center py-4">No member yet</p>
            }
        </div>
    </div>
    @if (isLeader)
    {
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="fw-bold mb-1">Daily Report</h5>
                    <small class="text-muted">
                        Create daily report for this project
                    </small>
                </div>

                <a asp-controller="Report"
                   asp-action="Daily"
                   asp-route-projectId="@Model.Project.ProjectId"
                   class="btn btn-primary">
                    <i class="bi bi-file-earmark-text"></i>
                    Create Daily Report
                </a>
            </div>
        </div>
    }
    <a href="/Report/ViewReport?projectId=@ViewBag.ProjectId" class="dashboard-btn">
        <i class="fa fa-chart-line"></i> View Report
    </a>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 12px;
    }

    .progress {
        border-radius: 10px;
    }

    .badge {
        font-weight: 500;
        padding: 0.4em 0.8em;
    }
</style>