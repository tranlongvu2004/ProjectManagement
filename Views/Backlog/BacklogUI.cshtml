@using PorjectManagement.Models
@model List<PorjectManagement.Models.Task>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@{
    ViewData["Title"] = "Main Table";
    var projectId = ViewBag.ProjectId;
    var roleId = Context.Session.GetInt32("RoleId") ?? 0;
    var userId = Context.Session.GetInt32("UserId") ?? 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    .dashboard-btn {
        padding: 8px 16px;
        background: linear-gradient(135deg, #4c6ef5, #3b5bdb);
        color: white !important;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border: none;
        transition: 0.25s ease;
    }

        .dashboard-btn:hover {
            background: linear-gradient(135deg, #364fc7, #2f44ad);
            color: #e9ecef !important;
            transform: translateY(-2px);
            box-shadow: 0px 4px 10px rgba(0,0,0,0.2);
        }

        .dashboard-btn i {
            font-size: 14px;
        }

    .search-hidden {
        display: none !important;
    }
</style>

<div class="container mt-4">
    
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Main Table</h3>
        <a asp-controller="Workspace" 
           asp-action="Details" 
           asp-route-id="@projectId" 
           class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại Workspace
        </a>
    </div>

    <!-- Tool bar -->
    <div class="d-flex gap-2 my-3">

        <div>
            <button id="btnSearch" class="btn btn-light border">
                <i class="fa fa-search"></i>Search
            </button>
            <input id="searchInput" type="text" class="form-control form-control-sm search-hidden" placeholder="Type to search" />
        </div>

        <!-- ⭐ Nút Add Member -->
        @if (roleId == 1)
        {
            <!-- Có quyền -->
            <a class="btn btn-primary"
               href="@Url.Action("AddMembers", "UserProject", new { id = ViewBag.ProjectId })">
                <i class="fa fa-user-plus"></i> Add Member
            </a>
            <a class="btn btn-success"
               href="@Url.Action("CreateTask", "Task", new { id = ViewBag.ProjectId })">
                <i class="bi bi-plus-circle"></i> Create Task
            </a>
        }
        else
        {
            <!-- Không có quyền -->
            <button class="btn btn-primary" onclick="showNoPermission()">
                <i class="fa fa-user-plus"></i> Add Member
            </button>
        }       
        <a href="/Dashboard/Dashboard?projectId=@projectId&userId=@userId" class="dashboard-btn">
            <i class="fa fa-chart-line"></i> Dashboard
        </a>
        @if(ViewBag.isLeader == true)
        {
            <a href="/Report/ViewReport?projectId=@projectId" class="dashboard-btn">
                <i class="fa fa-chart-line"></i> View Report
            </a>
        }
       
    </div>

    <table class="table align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Task</th>
                <th>Owner</th>
                <th>Status</th>
                <th>Due Date</th>
                <th>Priority</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Title</td>

                    <td>
                        @{
                            var owner = t.TaskAssignments.FirstOrDefault()?.User;
                        }
                        @if (owner != null)
                        {
                            <span class="badge square bg-success p-3">@owner.FullName</span>
                        }
                        else
                        {
                            <span class="badge rounded-circle bg-secondary p-3">No Owner</span>
                        }
                    </td>

                    <td>
                        @{
                            var statusClass = t.Status switch
                            {
                                @using TaskStatus = PorjectManagement.Models.TaskStatus

                                TaskStatus.ToDo => "bg-warning text-dark",
                                TaskStatus.Doing => "bg-warning text-dark",
                                TaskStatus.Completed => "bg-success",
                                TaskStatus.Stuck => "bg-danger",
                                TaskStatus.Not_Started => "bg-secondary",
                                _ => "bg-light text-dark"
                            };
                        }
                        <span class="badge @statusClass p-2">@t.Status</span>
                    </td>

                    <td>
                        @t.Deadline?.ToString("MMM d") 
                    </td>

                    <td>
                        @{
                            string priorityClass = t.Priority switch
                            {
                                @using TaskPriority = PorjectManagement.Models.TaskPriority
                                TaskPriority.Low => "bg-primary",
                                TaskPriority.Medium => "bg-warning text-dark",
                                TaskPriority.High => "bg-dark",
                                TaskPriority.Necessary => "bg-danger",
                                _ => "bg-light text-dark"
                            };
                        }
                        <span class="badge @priorityClass p-2">@t.Priority</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-5">
    <h3>📊 Dashboard</h3>
    <iframe src="/Dashboard/Dashboard?projectId=@projectId&userId=@userId"
            style="width:100%; height:900px; border:none; border-radius:12px; overflow:hidden"></iframe>
</div>


<script>

    const searchButton = document.getElementById("btnSearch");
    const searchInput = document.getElementById("searchInput");


    searchButton.addEventListener("click", function() {
        searchButton.classList.add("d-none");
        searchInput.classList.remove("search-hidden");
        searchInput.focus();
    });

    searchInput.addEventListener("blur", function() {
        searchInput.classList.add("search-hidden");
        searchButton.classList.remove("d-none");
        searchInput.value = "";
    });

    searchInput.addEventListener("keyup", function() {
        const keyword = this.value.toLowerCase();
        const rows = document.querySelectorAll("table tbody tr");
        rows.forEach(row => {
            let matched = false;
            const cells = row.querySelectorAll("td");
            
            cells.forEach(cell => {
                if (cell.textContent.toLowerCase().includes(keyword)) {
                    matched = true;
                }
            });

            row.style.display = matched ? "" : "none";
        });
    });
    function showNoPermission() {
        alert("You can't do this action!");
    }
</script>